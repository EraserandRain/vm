host_list = [
  {
    :name => "host1",
    :box => "generic/ubuntu2204",
    :hostname => "host1",
    :ipaddr => "172.20.120.1"
  },
  {
    :name => "host2",
    :box => "generic/ubuntu2204",
    :hostname => "host2",
    :ipaddr => "172.20.120.2"
  },
  {
    :name => "host3",
    :box => "generic/ubuntu2204",
    :hostname => "host3",
    :ipaddr => "172.20.120.3"
  },
   {
    :name => "host4",
    :box => "generic/ubuntu2204",
    :hostname => "host4",
    :ipaddr => "172.20.120.4"
  } 
]

Vagrant.configure("2") do |config|
  host_list.each do |item|
    config.vm.define item[:name]  do |host|
      host.vm.box=item[:box]
      host.vm.hostname=item[:hostname]
      host.vm.provision "shell", path: "reset/reset.sh"
      host.vm.network "public_network", ip: item[:ipaddr]
    end
  end
end
